{
	"name": "Python 3 with GPU Acceleration",
	"build": {
		"dockerfile": "Dockerfile"
	  },
	  "customizations": {
		"vscode": {
			"extensions": [
			"ms-python.python",
			"ms-toolsai.jupyter",
			"ms-azuretools.vscode-docker"
			]
		}
	},
	"postCreateCommand": ".devcontainer/postCreateCommand.sh",
	"remoteUser": "vscode",
	"runArgs": ["--gpus", "all"]
  }
  